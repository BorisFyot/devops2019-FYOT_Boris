- name: Extract JDK 12
  unarchive:
    src: https://download.java.net/java/GA/jdk12.0.1/69cfe15208a647278a19ef0990eea691/12/GPL/openjdk-12.0.1_linux-x64_bin.tar.gz
    dest: /opt/
    remote_src: yes

- name: Copy profile.d file
  copy:
    src: jdk12.sh
    dest: /etc/profile.d/jdk12.sh
    owner: root
    group: root
    mode: "0777"